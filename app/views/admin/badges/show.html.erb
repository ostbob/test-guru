<div class="row mt-3">
  <div class="col col-md-6">
    <%= link_to t('edit'), edit_admin_badge_path(@badge) %>
    <%= link_to t('back'), admin_badges_path %>
    <p>
      <strong><%= t('.name') %></strong>
      <%= @badge.name %>
    </p>
    <p>
      <strong><%= t('.image') %></strong>
      <%= image_tag @badge.image, style: 'height:10;width:10;margin-bottom:10px;' %>
    </p>
  </div>
</div>
