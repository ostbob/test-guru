<h1><%= t('.header') %></h1>

<p><mark><strong>
    <%= link_to t('.new_test'), new_admin_test_path %>
</strong></mark></p>

<div class="row mt-5">
  <div class="col-md-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th class="sort-by-title pointer" scope="col">
            <%= t('.title') %>
            <%= octicon 'arrow-up', class: 'text-success hide' %>
            <%= octicon 'arrow-down', class: 'text-success hide' %>
          </th>
          <th scope="col"><%= t('.level') %></th>
          <th scope="col"><%= t('.questions_count') %></th>
          <th scope="col" colspan="4"><%= t('.actions') %></th>
        </tr>
      </thead>
      </tbody>
        <%= render @tests %>
      </tbody>
    </table>
  </div>
</div>
