<h1><%= t('.header') %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th class="sort-by-title pointer" scope="col">
        <%= t('.title') %>
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
      </th>
      <th scope="col"><%= t('.level') %></th>
      <th scope="col"><%= t('.questions_count') %></th>
      <th scope="col"><%= t('.allotted_time') %></th>
      <th scope="col"><%= t('.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @tests %>
  </tbody>
</table>
